<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.Group?>
<?import javafx.scene.shape.Rectangle?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <GridPane fx:id="gameGrid" prefHeight="500" prefWidth="500">
        <Group fx:id="gameArea">
            <Rectangle fx:id="notball" fill="orangered" width="1000" height="600"/>
            <Rectangle fx:id="notnotball" fill="blueviolet" width="500" height="500"/>
            <Rectangle fx:id="ball" fill="aqua" width="40" height="40"/>
            <Rectangle fx:id="paddleL" fill="chocolate" width="30" height="30"/>
            <Rectangle fx:id="paddleR" fill="darkmagenta" width="20" height="20"/>
        </Group>
    </GridPane>

</GridPane>