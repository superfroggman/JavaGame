<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.Group?>
<?import javafx.scene.shape.Rectangle?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <Button onAction="#nicebutton" text="start" GridPane.rowIndex="1"/>
    <GridPane fx:id="gameGrid" GridPane.rowIndex="2">
        <Group fx:id="gameArea">
            <Rectangle/>

            <Rectangle fx:id="ballRect" fill="aqua" width="20" height="20"/>
            <Rectangle fx:id="paddleLRect" fill="chocolate" width="30" height="30"/>
            <Rectangle fx:id="paddleRRect" fill="darkmagenta" width="20" height="20"/>
        </Group>
    </GridPane>

</GridPane>